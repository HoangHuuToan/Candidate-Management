<div class="bgr d-flex">
</div>

<div class="w-100 h-100 d-flex position-fixed fixed">
    <div class="cpn_update shadow-lg p-3 mb-5 bg-white rounded p-2">

        <div class="d-block">
            <button class="btn float-end" onclick="@CloseThis"><i class="fa-solid fa-xmark"></i></button>
        </div>

        <h3 class="fw-bold">Chỉnh Sửa Thông Tin Ứng Viên</h3>
        <div class="d-flex flex-column">
            <div class="m-2">
                <label>Họ Tên :</label>
                <input type="text" @bind="candidate.Name" class="form-control" />
            </div>
        
            <div class="m-2">
                <label>Ngày Sinh :</label>
                <input type="date" @bind="candidate.BirthDay" class="form-control" />
            </div>
        
            <div class="m-2">
                <label>Địa Chỉ :</label>
                <input type="text" @bind="candidate.Address" class="form-control" />
            </div>
        
            <div class="m-2">
                <label>Số Điện Thoại :</label>
                <input type="text" @bind="candidate.NumberPhone" class="form-control" />
            </div>
        
            <div class="m-2">
                <label>Email :</label>
                <input type="text" @bind="candidate.Email" class="form-control" />
            </div>

            <div class="m-2">
                <label>Ngôn Ngữ :</label>
                <select @bind="candidate.Position" class="form-control">
                    @foreach (var position in valuesOfCombs)
                    {
                        if (candidate.Position == position.id)
                        {
                            <option value="@position.id" selected>
                                @position.value
                            </option>

                        }
                        else
                        {
                            <option value="@position.id">
                                @position.value
                            </option>

                        }
                    }
                </select>
            </div>
        

            <div class="m-2">
                <label>Vị Trí Ứng Tuyển :</label>
                <select @bind="candidate.Role" class="form-control">
                    @foreach (var role in valuesOfRole)
                    {
                        if (candidate.Role == role.id)
                        {
                            <option value="@role.id" selected>
                                @role.value
                            </option>

                        }
                        else
                        {
                            <option value="@role.id">
                                @role.value
                            </option>

                        }
                    }
                </select>
            </div>


            <div class="m-2">
                <label>Trạng Thái :</label>
                <select @bind="candidate.Status" class="form-control">
                    @foreach (var stt in statusCandidates)
                    {
                        if (candidate.Status == stt.id)
                        {
                            <option value="@stt.id" selected>
                                @stt.statusName
                            </option>

                        }
                        else
                        {
                            <option value="@stt.id">
                                @stt.statusName
                            </option>

                        }
                    }
                </select>
            </div>
        
    </div>
        <div class=" d-flex justify-content-center m-1">
            <button class="btn btn-info buttoncss" @onclick="update">Cập Nhật</button>
        </div>

    </div>

</div>

@if(isLoading)
{
    <LoadingCpn></LoadingCpn>
}



