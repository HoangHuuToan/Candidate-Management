<div class="w-100 h-100 d-flex position-fixed fixed" style="z-index:9999999999999999999">
    <div class="cpn_update shadow-lg p-3 mb-5 bg-white rounded p-2">
        <button class="btn_close" style="float:right;border: none;" onclick="@closeFormApply"><i class="fa-solid fa-xmark fa-beat"></i></button>
        <h3 class="fw-bold">Đăng Ký Tài Khoản</h3>
        <div class="d-flex flex-column">
            <div class="m-2">
                <label>Họ Tên :</label>
                <input type="text" @bind="user.Name" class="form-control" />
            </div>

            <div class="m-2">
                <label>Tên Đăng Nhập :</label>
                <input type="text" @bind="user.accout_name" class="form-control" />
            </div>
            <div class="m-2">
                <label>Mật Khẩu:</label>
                <input type="password" @bind="user.accout_password" class="form-control" />
            </div>

            <div class="m-2">
                <label>Ngày Sinh :</label>
                <input type="date" @bind="user.birth_day" class="form-control" />
            </div>

            <div class="m-2">
                <label>Địa Chỉ :</label>
                <input type="text" @bind="user.Address" class="form-control" />
            </div>

            <div class="m-2">
                <label>Số Điện Thoại :</label>
                <input type="text" @bind="user.Number_phone" class="form-control" />
            </div>

            <div class="m-2">
                <label>Email :</label>
                <input type="text" @bind="user.Email" class="form-control" />
            </div>

        </div>
        <div class=" d-flex justify-content-center m-1">
            <button class="btn btn-info buttoncss" onclick="@registerUser">Đăng Ký</button>
        </div>

    </div>

</div>

@if (isLoading)
{
    <LoadingCpn></LoadingCpn>
}



