@using MyProject.Shared.Entities

<div class="bgr"></div>
<div class="cpn_confirm">
    <h2>Thông Tin Ứng Viên</h2>
    <table>
        <tr>
            <td>
                <label>Vị Trí Ứng Tuyển</label>
                <select @bind="candidate_insert.Role">
                    @foreach (var value in valuesOfCombs)
                    {
                        if (value.valueOfComb == 2)
                        {
                            if (@value.id == candidate_insert.Role)
                            {
                                <option value="@value.id" selected>
                                    @value.value
                                </option>
                            }else
                            {
                                <option value="@value.id">
                                    @value.value
                                </option>
                            }

                        }
                    }
                </select>
            </td>
            <td>
                <label>Địa Chỉ</label>
                <input type="text" @bind="@candidate_insert.Address" />
            </td>
        </tr>

        <tr>
            <td>
                <label>Ngôn Ngữ </label>
                <select @bind="candidate_insert.Position">

                    @foreach (ValuesOfComb value in valuesOfCombs)
                    {   @if (value.valueOfComb == 1)
                        {
                            <option value="@value.id" selected="@(value.id == candidate_insert.Position ? true : false )">
                                @value.value
                            </option>
                        }
                    }


                </select>
            </td>
            <td>
                <label>Số Điện Thoại</label>
                <input type="text" @bind="@candidate_insert.NumberPhone" />
            </td>
        </tr>

        <tr>
            <td>
                <label>Họ và Tên</label>
                <input type="text" @bind="@candidate_insert.Name" />
            </td>
            <td>
                <label>Email</label>
                <input type="text" @bind="@candidate_insert.Email" />
            </td>
        </tr>

        <tr>
            <td>
                <label>Ngày Sinh</label>
                <input type="date" @bind="@candidate_insert.BirthDay" />
            </td>
            <td>
                <label>Nguồn</label>
                <select @bind="candidate_insert.Origin">
                    @foreach (ValuesOfComb value in valuesOfCombs)
                    {   @if (value.valueOfComb == 3)
                        {
                            <option value="@value.id">
                                @value.value
                            </option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button onclick="@importCandidate">OK</button>
                <button @onclick="@closeConfirm">CANCEL</button>
            </td>
        </tr>
    </table>
</div>
@if (isLoading)
{
    <LoadingCpn></LoadingCpn>
}