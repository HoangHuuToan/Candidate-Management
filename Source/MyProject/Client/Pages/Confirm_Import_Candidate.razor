@using MyProject.Shared.Entities

<div class="bgr"></div>
<div class="cpn_confirm d-flex flex-column p-4">
    <h2>Thông Tin Ứng Viên</h2>
    <table class="d-block m-auto text-center">
        <tr>
            <td>
                <label>Vị Trí Ứng Tuyển</label>
                <select @bind="candidate_insert.Role" class="form-select">
                    @foreach (var value in valuesOfCombs)
                    {
                        if (value.valueOfComb == 2)
                        {
                            if (@value.id == candidate_insert.Role)
                            {
                                <option value="@value.id" selected>
                                    @value.value
                                </option>
                            }else
                            {
                                <option value="@value.id">
                                    @value.value
                                </option>
                            }

                        }
                    }
                </select>
            </td>
            <td>
                <label>Địa Chỉ</label>
                <input type="text" @bind="@candidate_insert.Address" class="form-control" />
            </td>
        </tr>

        <tr>
            <td>
                <label>Ngôn Ngữ </label>
                <select @bind="candidate_insert.Position" class="form-select">

                    @foreach (ValuesOfComb value in valuesOfCombs)
                    {   @if (value.valueOfComb == 1)
                        {
                            <option value="@value.id" selected="@(value.id == candidate_insert.Position ? true : false )">
                                @value.value
                            </option>
                        }
                    }


                </select>
            </td>
            <td>
                <label>Số Điện Thoại</label>
                <input type="text" @bind="@candidate_insert.NumberPhone" class="form-control" />
            </td>
        </tr>

        <tr>
            <td>
                <label>Họ và Tên</label>
                <input type="text" @bind="@candidate_insert.Name" class="form-control" />
            </td>
            <td>
                <label>Email</label>
                <input type="text" @bind="@candidate_insert.Email" class="form-control" />
            </td>
        </tr>

        <tr>
            <td>
                <label>Ngày Sinh</label>
                <input type="date" @bind="@candidate_insert.BirthDay" class="form-control" />
            </td>
            <td>
                <label>Nguồn</label>
                <select @bind="candidate_insert.Origin" class="form-select">
                    @foreach (ValuesOfComb value in valuesOfCombs)
                    {   @if (value.valueOfComb == 3)
                        {
                            <option value="@value.id">
                                @value.value
                            </option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-primary" onclick="@importCandidate">OK</button>
            </td>
            <td>
                <button class="btn btn-danger" @onclick="@closeConfirm">CANCEL</button>
            </td>
        </tr>
    </table>
</div>
@if (isLoading)
{
    <LoadingCpn></LoadingCpn>
}