@layout MyLayout
@page "/login"
<div class="bgr d-flex">
</div>

<div class="w-100 h-100 d-flex position-fixed fixed-top fixed-strart">
    <div class="form-login shadow-lg p-3 mb-5 bg-white rounded p-2">
        <h2>Đăng Nhập</h2>
        <div class="m-2">
            <input type="text" class="form-control" placeholder="email address or phone number" @bind="loginInfo.accout_name" />
        </div>

        <div class="m-2">
            <input type="password" class="form-control" placeholder="password" @bind="loginInfo.accout_password" onkeypress="Click_btnLogin(event)" />
        </div>

        <div class=" d-flex justify-content-center">
            <button class="btn btn-forgot-pass float-end">Quên Mật Khẩu</button>
        </div>

        <div class=" d-flex justify-content-center">
            <button id="btn_login" class="btn btn-info btn-login fw-bold" @onclick="()=>Login()">Đăng Nhập</button>
        </div>

        <hr style="height:2px;border-width:0;color:gray;background-color:gray;width:320px ; margin:auto;margin-top: 10px;margin-bottom: 10px;">

        <div class=" d-flex justify-content-center">
            <button class="btn btn-success btn-register fw-bold" onclick="@registerUser">Đăng Ký</button>
        </div>
    </div>
</div>
@if (isLoading)
{
    <LoadingCpn></LoadingCpn>
}
@if (isRegister)
{
    <Register Close=closeFormApply></Register>
}
@if (isVerified)
{
    <Verified_code userLogin="@user_login"></Verified_code>
}